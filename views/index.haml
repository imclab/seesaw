#main_container
	#top
		#links
			%ul
				%li
					%a{:href => "http://redcloth.org/textile/writing-paragraph-text/", :title => "Textile Examples", :rel => "textile", :target => "_blank"} Texile
				%li
					%a{:href => "http://haml-lang.com/docs/yardoc/file.HAML_REFERENCE.html", :title => "Haml Examples", :rel => "haml", :target => "_blank"} Haml
				%li
					%a{:href => "http://daringfireball.net/projects/markdown/syntax", :title => "Markdown Examples", :rel => "markdown", :target => "_blank"} Markdown
				%li
					%a{:href => "http://sass-lang.com/docs/yardoc/file.SASS_REFERENCE.html", :title => "Sass Examples", :rel => "sass", :target => "_blank"} Sass
		#tab
			%p i
	#background
	#header
		%h1.tooltip{:title => "SeeSaw?"}
			%a= c("metadata.title")
		%h2= c("metadata.description")
		#snapshot
			%img{:src => "/images/snapshot.jpg"}
	%form#converter.invisible{:action => "/see", :method => :post}
		%textarea{:name => :input}
		%select#input_format{:name => "input_format"}
			%option{:value => "html"}
			%option{:value => "textile", :selected => "selected"}
			%option{:value => "haml"}
			%option{:value => "markdown"}
		%select#output_format{:name => "output_format"}
			%option{:value => "html", :selected => "selected"}
			%option{:value => "textile"}
			%option{:value => "haml"}
			%option{:value => "markdown"}
			%option{:value => "plain"}
			%option{:value => "actual"}
		%input{:type => :submit, :name => "seesaw", :class => :button}
	#seesaw
	#seesaw_post
	#weights
		#left.weight
			#left_controls.controls
				%ul
					%li.control
						%a.tooltip{:href => "", :title => "Html", :rel => "html"} Ht
					%li.control
						%a.tooltip{:href => "", :title => "Textile", :rel => "textile"} Tx
					%li.control
						%a.tooltip{:href => "", :title => "Haml", :rel => "haml"} Ha
					%li.control
						%a.tooltip{:href => "", :title => "Markdown", :rel => "markdown"} Md
			.text_container
				%textarea.text#input_text
		#right.weight
			.text_container
				%textarea.text#output_text
			#right_controls.controls
				%ul
					%li.control
						%a{:href => "", :title => "Html", :rel => "html"} Ht
					%li.control
						%a{:href => "", :title => "Textile", :rel => "textile"} Tx
					%li.control
						%a{:href => "", :title => "Haml", :rel => "haml"} Ha
					%li.control
						%a{:href => "", :title => "Markdown", :rel => "markdown"} Md
	#footer
		%ul
			%li.control
				%a.tooltip.lesson{:href => "", :title => "Textile Example", :rel => "textile"} Tx
			%li.control
				%a.tooltip.lesson{:href => "", :title => "Markdown Example", :rel => "markdown"} Md
		%a.name{:href => c("links.website")} Viatropos @ 4D
	/[if IE]
		#ie_warning
			:textile
				#{c("snippets.ie_warning")}
